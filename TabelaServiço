CREATE TABLE public.SERVICO
(
	CODSERVICO		INTEGER NOT NULL,
	CODEMPRESA		INTEGER NOT NULL,
	CODTIPOSERVICO	INTEGER NOT NULL,
	VALOR 			NUMERIC(500) NOT NULL,
	CONSTRAINT PK_CODSERVICO PRIMARY KEY (CODSERVICO),
	CONSTRAINT FK_CODEMPRESA FOREIGN KEY (CODEMPRESA)
	REFERENCES PUBLIC.EMPRESA (CODEMPRESA) MATCH SIMPLE
	ON UPDATE CASCADE
	ON DELETE RESTRICT,
	CONSTRAINT FK_CODTIPOSERVICO FOREIGN KEY (CODTIPOSERVICO)
	REFERENCES PUBLIC.TIPOSERVICO (CODTIPOSERVICO) MATCH SIMPLE
	ON UPDATE CASCADE
	ON DELETE RESTRICT 
);